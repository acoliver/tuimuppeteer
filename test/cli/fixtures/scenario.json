{
  "schemaVersion": "v1",
  "name": "basic",
  "launch": {
    "command": "./launch.sh",
    "args": [],
    "cwd": ".",
    "backend": "tmux",
    "startupTimeoutMs": 10,
    "readyMatcher": { "contains": "Ready" }
  },
  "defaults": {
    "waitTimeoutMs": 50,
    "pollMs": 10,
    "scrollbackLines": 50,
    "postTypeMs": 0
  },
  "artifacts": {
    "report": "stdout",
    "capturesDir": "./captures"
  },
  "sequenceOrder": ["login", "verify"]
}
